@model DismasDemo.Models.PriceList

@{
    ViewData["Title"] = "Edit Price List";
}

<h4>Edit Price List</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PriceListID" />
            <div class="form-group">
                <label asp-for="PriceListName" class="control-label"></label>
                <input asp-for="PriceListName" class="form-control" />
                <span asp-validation-for="PriceListName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
